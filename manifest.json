{
  "manifest_version": 2,
  "name": "Gibbon Tabs",
  "description": "A Chrome extension to help you manage your tabs effectively.",
  "version": "1.0.3,
  "background": {
    "scripts": ["js/background.js"]
  },
  "commands": {
    "activate_in_popup": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+E"
      },
      "description": "Activates the extension in a popup window."
    }
  },
  "browser_action": {
    "default_icon": "images/logo.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/logo.png",
    "48": "images/logo.png",
    "128": "images/logo.png"
  },
  "permissions": [
    "tabs",
    "storage"
  ]
}
